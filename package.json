{
  "name": "@nerd-coder/svelte-zod-form",
  "version": "1.2.2",
  "description": "Building forms with breeze, using Svelte + Zod",
  "packageManager": "pnpm@8.5.1",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "rollup -c",
    "prettier": "prettier --write .",
    "lint": "eslint .",
    "check": "svelte-check",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "release": "release-it",
    "prepare": "svelte-kit sync"
  },
  "repository": "github:nerd-coder/svelte-zod-form",
  "keywords": [
    "svelte",
    "zod",
    "form"
  ],
  "author": "Toanzzz",
  "license": "MIT",
  "bugs": "https://github.com/nerd-coder/svelte-zod-form/issues",
  "homepage": "https://github.com/nerd-coder/svelte-zod-form#readme",
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm run lint",
        "pnpm run check",
        "pnpm test -- --run",
        "pnpm run build"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "dependencies": {
    "radash": "^11.0.0",
    "svelte": "^4.1.2",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "svelte": "^3.0.0 || ^4.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@sveltejs/adapter-auto": "^2.1.0",
    "@sveltejs/kit": "^1.22.4",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vitest/coverage-v8": "^0.34.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.32.4",
    "happy-dom": "^10.9.0",
    "prettier": "^3.0.1",
    "prettier-plugin-svelte": "^3.0.3",
    "release-it": "^16.1.3",
    "rollup": "^3.27.2",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-sizes": "^1.0.5",
    "svelte-check": "^3.4.6",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  }
}
