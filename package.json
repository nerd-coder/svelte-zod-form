{
  "name": "@nerd-coder/svelte-zod-form",
  "version": "0.0.15",
  "description": "Building forms with breeze, using Svelte + Zod",
  "packageManager": "pnpm@8.5.1",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "rollup -c",
    "prettier": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "release": "release-it",
    "prepare": "svelte-kit sync"
  },
  "repository": "github:nerd-coder/svelte-zod-form",
  "keywords": [
    "svelte",
    "zod",
    "form"
  ],
  "author": "Toanzzz",
  "license": "MIT",
  "bugs": "https://github.com/nerd-coder/svelte-zod-form/issues",
  "homepage": "https://github.com/nerd-coder/svelte-zod-form#readme",
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm test -- --run",
        "npm run build"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "dependencies": {
    "radash": "^10.8.1",
    "svelte": "^3.59.1",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "svelte": "^3.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.1",
    "@sveltejs/adapter-auto": "^2.1.0",
    "@sveltejs/kit": "^1.20.2",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@vitest/coverage-c8": "^0.32.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "happy-dom": "^9.20.3",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "release-it": "^15.11.0",
    "rollup": "^3.25.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-sizes": "^1.0.5",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vitest": "^0.32.0"
  }
}
