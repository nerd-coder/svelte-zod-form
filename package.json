{
  "name": "@nerd-coder/svelte-zod-form",
  "version": "0.0.4",
  "description": "Building forms with breeze, using Svelte + Zod",
  "packageManager": "pnpm@8.5.1",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup -c",
    "prettier": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "release": "release-it"
  },
  "repository": "github:nerd-coder/svelte-zod-form",
  "keywords": [
    "svelte",
    "zod",
    "form"
  ],
  "author": "Toanzzz",
  "license": "MIT",
  "bugs": "https://github.com/nerd-coder/svelte-zod-form/issues",
  "homepage": "https://github.com/nerd-coder/svelte-zod-form#readme",
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false,
    "printWidth": 100,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "/dist"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    }
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm test -- --run",
        "npm run build"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "dependencies": {
    "radash": "^10.8.1",
    "svelte": "^3.59.1",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "svelte": "^3.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8",
    "release-it": "^15.10.3",
    "rollup": "^3.23.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-sizes": "^1.0.5",
    "tslib": "^2.5.2",
    "typescript": "^5.0.4",
    "vitest": "^0.31.2"
  }
}
